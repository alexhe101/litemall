<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.litemall.dao.FreightModelDao">

    <resultMap id="BaseResultMap" type="com.example.litemall.model.po.FreightModel">
        <!--@Table freight_model-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="shopId" column="shop_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="defaultModel" column="default_model" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="OTHER"/>
        <result property="unit" column="unit" jdbcType="INTEGER"/>
        <result property="gmtCreate" column="gmt_create" jdbcType="TIMESTAMP"/>
        <result property="gmtModified" column="gmt_modified" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, shop_id, name, default_model, type, unit, gmt_create, gmt_modified
        from order.freight_model
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, shop_id, name, default_model, type, unit, gmt_create, gmt_modified
        from order.freight_model
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, shop_id, name, default_model, type, unit, gmt_create, gmt_modified
        from order.freight_model
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="shopId != null">
                and shop_id = #{shopId}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="defaultModel != null and defaultModel != ''">
                and default_model = #{defaultModel}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="unit != null">
                and unit = #{unit}
            </if>
            <if test="gmtCreate != null">
                and gmt_create = #{gmtCreate}
            </if>
            <if test="gmtModified != null">
                and gmt_modified = #{gmtModified}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into order.freight_model(shop_id, name, default_model, type, unit, gmt_create, gmt_modified)
        values (#{shopId}, #{name}, #{defaultModel}, #{type}, #{unit}, #{gmtCreate}, #{gmtModified})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update order.freight_model
        <set>
            <if test="shopId != null">
                shop_id = #{shopId},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="defaultModel != null and defaultModel != ''">
                default_model = #{defaultModel},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="unit != null">
                unit = #{unit},
            </if>
            <if test="gmtCreate != null">
                gmt_create = #{gmtCreate},
            </if>
            <if test="gmtModified != null">
                gmt_modified = #{gmtModified},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from order.freight_model where id = #{id}
    </delete>

</mapper>